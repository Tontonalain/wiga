<div class="container">
  <div class="cards">

    <div class="card-category rounded-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))"   >
    <%= image_tag @wig.url %>
    </div>

    <div class="card-category d-flex flex-column justify-content-center">
      <ul class="list-group">
          <li class="list-group-item"><H1><%= @wig.name %></h1></li>
          <li class="list-group-item"><strong>SIZE:</strong> <%= @wig.size %></li>
          <li class="list-group-item"><strong>COLOR: </strong><%= @wig.color %></li>
          <li class="list-group-item"><strong>STYLE: </strong><%= @wig.hair_style %></li>
          <li class="list-group-item" ><strong>TYPE: </strong><%= @wig.hair_type %></li>
        </ul>
        <%= link_to "booking", "#", class: "btn btn-ghost mt-3" %>
    </div>
  </div>

</div>
